# =============================================================================
# AI CxO - Production Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# Application environment (development, staging, production)
APP_ENV=production

# Application URL - used for CORS and redirects
# Include protocol, no trailing slash
APP_URL=https://aicxo.example.com

# Comma-separated list of allowed CORS origins
# In production, restrict this to your actual domains
CORS_ORIGINS=https://aicxo.example.com,https://www.aicxo.example.com

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# JWT secret key - MUST be changed in production!
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# JWT algorithm
ALGORITHM=HS256

# Access token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# -----------------------------------------------------------------------------
# POSTGRESQL DATABASE (User Management)
# -----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=aicxo_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=aicxo_users

# -----------------------------------------------------------------------------
# MONGODB DATABASE (Documents, Agents, Meetings)
# -----------------------------------------------------------------------------
# MongoDB connection URI
# For standalone: mongodb://host:port
# For replica set: mongodb://user:pass@host1:port1,host2:port2/db?replicaSet=rs0
MONGO_URI=mongodb://mongodb:27017

# MongoDB database name
MONGO_DB=aicxo_documents

# MongoDB authentication (optional)
# MONGO_USER=aicxo_user
# MONGO_PASSWORD=change_this_secure_password

# -----------------------------------------------------------------------------
# OPENAI API
# -----------------------------------------------------------------------------
# OpenAI API key (can also be set via admin UI)
# OPENAI_API_KEY=sk-your-openai-api-key

# Default model for new agents
DEFAULT_AI_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# NETWORKING / DEPLOYMENT
# -----------------------------------------------------------------------------
# Backend internal port (container-to-container)
BACKEND_PORT=58000

# Frontend exposed port (host:container)
FRONTEND_PORT=53000

# Database external ports (for external access/debugging)
# Internal container ports remain standard (5432, 27017)
POSTGRES_EXTERNAL_PORT=60432
MONGO_EXTERNAL_PORT=60017

# Backend host for nginx proxy (container name in docker network)
BACKEND_HOST=backend

# -----------------------------------------------------------------------------
# ADMIN USER (created on first startup if no admin exists)
# -----------------------------------------------------------------------------
DEFAULT_ADMIN_EMAIL=admin@aicxo.com
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change_this_password

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# SSL/TLS (for production with HTTPS)
# -----------------------------------------------------------------------------
# Set to true to enable HTTPS redirect
FORCE_HTTPS=false

# SSL certificate paths (if using custom certs with nginx)
# SSL_CERT_PATH=/etc/ssl/certs/aicxo.crt
# SSL_KEY_PATH=/etc/ssl/private/aicxo.key

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
# Requests per minute per IP for API endpoints
RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# FILE UPLOADS
# -----------------------------------------------------------------------------
# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt,.csv,.xlsx,.xls,.pptx,.ppt

